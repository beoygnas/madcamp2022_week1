<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pagepartition"
    tools:context=".GalleryFragment">

    <!--app:showBubbleAlways="false"-->

    <com.l4digital.fastscroll.FastScrollView
        android:id="@+id/recyclerViewProfile"
        android:layout_width="330dp"
        android:layout_height="600dp"
        app:handleColor="#999999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showBubble="false"
        tools:listitem="@layout/gallery_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewProfile"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewProfile"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewProfile">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="취소" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="확인" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

